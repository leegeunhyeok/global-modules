{
  "name": "@global-modules/runtime",
  "description": "Runtime for global modules",
  "version": "0.0.0-dev.20250102111607",
  "types": "./dist/index.d.ts",
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "./dist/**/*.js",
    "./dist/**/*.d.ts"
  ],
  "scripts": {
    "prepack": "yarn cleanup && yarn build",
    "start": "node --import @swc-node/register/esm-register src/index.ts",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest --run",
    "test:watch": "vitest --watch",
    "cleanup": "rm -rf dist",
    "build": "node build/index.mjs && tsc -p tsconfig.build.json"
  },
  "devDependencies": {
    "@swc-node/register": "^1.10.9",
    "@swc/core": "1.10.1",
    "@swc/helpers": "^0.5.15",
    "@swc/types": "^0.1.17",
    "@types/node": "^22",
    "esbuild": "^0.24.0",
    "typescript": "5.6.2",
    "vite": "^5.4.8",
    "vitest": "^2.1.1",
    "zx": "^8.1.8"
  }
}
