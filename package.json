    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@types/node": "^22",
    "@yarnpkg/types": "^4.0.0",
    "nx": "20.2.2",
    "oxlint": "0.15.1",
    "prettier": "^3.4.2",
    "typescript": "5.6.2"
  }
}
